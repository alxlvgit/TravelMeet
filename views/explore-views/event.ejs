<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- use cdn for development only -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- use cdn for development only-->

    <link href="/output.css" rel="stylesheet" />
    <script defer src="../secret-keys.js"></script>
    <script defer src="../event.js"></script>
    <title>Event</title>
  </head>
  <body>
    <div class="flex flex-col container m-auto max-w-max">
      <div class="flex-col event-details">
        <h1 class="text-xl text-center event-title"><%- event.name %></h1>
        <img src="<%- event.images[0].url %>" alt="" />
        <a
          href="<%- event.url %>"
          target="_blank"
          class="bg-button hover:bg-button-hover text-white font-bold py-1 px-1 rounded text-xs sm:py-2 sm:px-2 sm:text-sm"
        >
          Get Tickets
        </a>
        <div class="flex-row">
          <p class="text-sm text-center event-location">
            <%- event._embedded.venues[0].name %>
          </p>
          <p class="text-sm text-center event-date">
            <%- event.dates.start.localDate %> <%- event.dates.start.localTime
            %>
          </p>
          <p class="text-sm text-center people-number"></p>
        </div>
      </div>
      <div class="flex-col event-groups">
        <h1 class="text-xl text-center">Groups</h1>
      </div>
    </div>
  </body>
</html>
