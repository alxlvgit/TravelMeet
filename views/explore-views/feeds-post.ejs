function createCard(cardData) {
const card = document.createElement("div");
card.classList.add(
"card",
"m-4",
"p-4",
"bg-white",
"border",
"border-gray-300",
"rounded-md",
"w-80"
);
const img = document.createElement("img");
img.classList.add("w-full", "h-40", "object-cover", "mb-4", "rounded-md");
img.src = cardData.imageURI;
img.alt = cardData.altText;

const title = document.createElement("h3");
title.classList.add("text-xl", "font-semibold", "mb-2");
title.innerText = cardData.title;

const caption = document.createElement("p");
caption.classList.add("mb-2");
caption.innerText = cardData.caption;

const user = document.createElement("p");
user.classList.add("mb-2", "flex", "items-center");
const userIcon = document.createElement("i");
userIcon.classList.add("fas", "fa-user", "mr-2");
user.appendChild(userIcon);
const userName = document.createElement("span");
userName.innerText = "John Doe";
user.appendChild(userName);

const location = document.createElement("p");
location.classList.add("mb-2", "flex", "items-center");
const locationIcon = document.createElement("i");
locationIcon.classList.add("fas", "fa-map-marker-alt", "mr-2");
location.appendChild(locationIcon);
location.innerText = cardData.location;

const date = document.createElement("p");
date.classList.add("text-sm", "text-gray-600", "flex", "items-center");
const dateIcon = document.createElement("i");
dateIcon.classList.add("fas", "fa-calendar-alt", "mr-2");
date.appendChild(dateIcon);
date.innerText = `Created at: ${cardData.createdAt.toLocaleDateString()}`;

card.appendChild(img);
card.appendChild(title);
card.appendChild(caption);
card.appendChild(user);
card.appendChild(location);
card.appendChild(date);

return card;
}

const cardContainer = document.getElementById("card-container");

data.forEach((cardData) => {
const card = createCard(cardData);
cardContainer.appendChild(card);
});
