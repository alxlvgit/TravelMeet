<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-ekOryaXPbeGgZunLlZRdNUPsauCYLkdMsI88L6sDt2f+jNdACDlIKJ8gXQFq4w4G" crossorigin="anonymous">
    <script>
        function toggleFollow() {
            const followBtn = document.getElementById('followBtn');
            followBtn.innerText = followBtn.innerText === 'Follow' ? 'Followed' : 'Follow';
        }

        function toggleEventsAndFeeds() {
            const eventsBtn = document.getElementById('eventsBtn');
            const feedsBtn = document.getElementById('feedsBtn');
            const eventsContent = document.getElementById('eventsContent');
            const feedsContent = document.getElementById('feedsContent');
            
            eventsBtn.classList.toggle('bg-gray-200');
            feedsBtn.classList.toggle('bg-gray-200');
            
            eventsContent.classList.toggle('hidden');
            feedsContent.classList.toggle('hidden');
        }
    </script>
</head>
<body class="bg-gray-100">
    <header class="p-4">
        <a href="#" onclick="window.location.href='/'" class="text-xl font-bold text-blue-500">&lt;</a>
    </header>
    <div class="flex justify-center">
        <div class="bg-white w-2/3 p-4 rounded-lg shadow-md">
            <div class="flex flex-col items-center">
                <a href="/profile/1">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRLe5PABjXc17cjIMOibECLM7ppDwMmiDg6Dw&usqp=CAU" alt="User avatar" class="rounded-full w-32 h-32 -mt-16">
                </a>
                <div class="w-full mt-4">
                    <div class="mt-20">
                        <div class="flex justify-between items-start">
                            <div>
                                <h1 class="text-3xl font-bold">John Doe</h1>
                                <p>Some words to describe</p>
                            </div>
                            <div class="flex flex-col space-y-2">
                                <div class="flex space-x-4">
                                    <button id="followBtn" onclick="toggleFollow()" class="bg-blue-500 text-white font-semibold py-2 px-4 rounded-md">Follow</button>
                                    <button class="bg-green-500 text-white font-semibold py-2 px-4 rounded-md">Message</button>
                                </div>
                                <div class="flex space-x-2">
                                    <button class="bg-gray-300 py-1 px-2 rounded-md">
                                        <i class="fa-solid fa-grid-2"></i>
                                    </button>
                                    <button class="bg-gray-300 py-1 px-2 rounded-md">
                                        <i class="fa-solid fa-grip-lines"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <div class="flex justify-center items-center">
                                <div class="flex space-x-4">
                                    <button id="eventsBtn" onclick="toggleEventsAndFeeds()" class="bg-gray-200 py-2 px-4 rounded-md">Events</button>
                                    <button id="feedsBtn" onclick="toggleEventsAndFeeds()" class="py-2 px-4 rounded-md">Feeds</button>
                                </div>
                            </div>
                        </div>
                        <div id="posts" class="mt-4">
                            <div id="eventsContent" class="hidden">
                                <p>Example event content...</p>
                                <p>More example event content...</p>
                            </div>
                            <div id="feedsContent">
                                <p>Example feed content...</p>
                                <p>More example feed content...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

