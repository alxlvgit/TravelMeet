// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

datasource cloud_db {
  provider = "mysql"
  url      = env("CLOUD_DATABASE_URL")
  if       = env("IS_QUODDI") == "1"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  posts    Post[]
  following User[] @relation("UserToUser")
  followers User[] @relation("UserToUser")
  groups    Group[]  @relation("GroupToUser")
  createdGroups Group[] @relation("GroupCreator")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  imageName String
  caption   String
  imageURI  String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}

model Event {
  id         String  @id
  name       String
  date       DateTime
  venue      String
  latitude   Float
  longitude  Float
  groups     Group[] @relation("GroupToEvent")
}

model Group {
  id         String  @id @default(uuid()) 
  name       String
  creator    User    @relation(name: "GroupCreator",fields: [creatorId], references: [id])
  creatorId  Int
  event      Event @relation("GroupToEvent", fields: [eventId], references: [id])
  eventId    String
  members    User[]  @relation("GroupToUser")
}

